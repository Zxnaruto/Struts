<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
<constant name="struts.devMode" value="true"/>
<package name="sqllogin" extends="struts-default">
<action name="loginzx" class="indi.zx.action.LoginAction" method="execute">
<result name="success">success.jsp</result>
<result name="error"> error.jsp</result>
</action>

<action name="reg" class="indi.zx.action.LoginAction" method="Insert">
<result name="success">/index.jsp</result>
<result name="error">/reg.jsp</result>
</action>

<action name="del" class="indi.zx.action.LoginAction" method="Delete">
<result name="success">/index.jsp</result>
<result name="error">/del.jsp</result>
</action>
<action name="update" class="indi.zx.action.LoginAction" method="Update">
<result name="success">/index.jsp</result>
<result name="error">/update.jsp</result>
</action>
</package>
</struts>    
